# Anonymous LinkedIn Scraper Configuration
# No login credentials required!

# Search configuration
SEARCH_KEYWORDS=software engineering,python,data science
MAX_POSTS=50
DELAY_MIN=3
DELAY_MAX=8

# Output configuration
OUTPUT_DIR=output
CSV_FILENAME=linkedin_posts_anonymous.csv
IMAGES_DIR=images

# Browser configuration
HEADLESS=True
BROWSER_TIMEOUT=60000

# Anonymous scraping features
USE_PROXIES=False
PROXY_LIST=
# Example proxy list (comma-separated):
# PROXY_LIST=proxy1.example.com:8080,proxy2.example.com:8080,proxy3.example.com:8080

# Anti-detection features
STEALTH_MODE=True
COOKIE_FILE=linkedin_cookies.json
MAX_RETRY_ATTEMPTS=3

# Rate limiting (be respectful)
REQUESTS_PER_MINUTE=10
CONCURRENT_REQUESTS=2

# User agent rotation (automatic)
ROTATE_USER_AGENT=True

# Optional: Proxy authentication (if your proxies require auth)
PROXY_USERNAME=
PROXY_PASSWORD=

# Advanced features
ENABLE_JAVASCRIPT=True
BLOCK_IMAGES=False
BLOCK_CSS=False

# Data extraction preferences
EXTRACT_FULL_CONTENT=True
EXTRACT_AUTHOR_PROFILES=True
EXTRACT_ENGAGEMENT_METRICS=True
EXTRACT_MEDIA_URLS=True

# Quality filters
MIN_CONTENT_LENGTH=50
MAX_CONTENT_LENGTH=5000
SKIP_PROMOTED_POSTS=True

# Geographic targeting (optional)
TARGET_LOCATION=
# Example: TARGET_LOCATION=United States,Canada,United Kingdom
